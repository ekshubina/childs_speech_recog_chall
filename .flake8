[flake8]
# Flake8 configuration for code linting

# Maximum line length
max-line-length = 127

# Maximum complexity (cyclomatic complexity)
max-complexity = 20

# Ignore specific errors/warnings
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
# E501: line too long (handled by black)
extend-ignore = E203, W503

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    notebooks,
    data,
    checkpoints,
    logs

# Select error codes to check
select = E,W,F,C

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811,E306
    scripts/*:E402

# Show source code for each error
show-source = True

# Show error codes in output
show-pep8 = True

# Count errors
count = True

# Statistics
statistics = True
