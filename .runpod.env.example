RUNPOD_API_KEY=your_api_key_here
NETWORK_VOLUME_ID=your_volume_id_here
POD_ID=                          # written automatically after first pod_train.sh run
SSH_KEY_PATH=~/.ssh/id_ed25519

# GPU type passed to runpodctl create pod --gpuType
# Experiments (whisper-small, whisper-medium) — community cloud spot $0.20/hr:
GPU_TYPE="NVIDIA GeForce RTX 4090"
# Final training (whisper-large) — community cloud spot $0.60/hr:
# GPU_TYPE="NVIDIA A100 80GB PCIe"
# Final training (whisper-large, faster SXM4 variant) — $0.79/hr:
# GPU_TYPE="NVIDIA A100-SXM4-80GB"

# Network Volume S3 API — for direct data upload without starting a Pod
# Get these from: RunPod console → Network Volumes → your volume → S3 API Access
RUNPOD_S3_BUCKET=your_bucket_name_here
RUNPOD_S3_ENDPOINT=https://s3api-eu-ro-1.runpod.io  # adjust region if different
RUNPOD_S3_REGION=eu-ro-1                            # adjust region if different
AWS_ACCESS_KEY_ID=your_s3_access_key_here
AWS_SECRET_ACCESS_KEY=your_s3_secret_key_here
